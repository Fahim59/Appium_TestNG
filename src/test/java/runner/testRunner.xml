<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="false">
<listeners>
    <listener class-name="utils.Listeners"/>
    <listener class-name="retry_analyzer.Transformer"/>
</listeners>
    <test verbose="2" preserve-order="true" name="Emulator">
        <parameter name="platform" value="Android"/>
        <parameter name="device" value="Nexus_5"/>
        <parameter name="automation" value="UiAutomator2"/>
        <parameter name="emulator" value="true"/>
        <parameter name="isInstalled" value="true"/>
        <parameter name="udid" value="emulator-5554"/>
        <parameter name="appPackage" value="com.saucelabs.mydemoapp.rn"/>
        <parameter name="appActivity" value="com.saucelabs.mydemoapp.rn.MainActivity"/>
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="login_with_valid_credentials"/>
                </methods>
            </class>

            <class name="tests.ProductTest">
                <methods>
                    <include name="validate_product"/>
                    <exclude name="order_product"/>
                </methods>
            </class>

            <class name="tests.CartTest">
                <methods>
                    <exclude name="check_product_details"/>
                    <exclude name="enter_checkout_details"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>